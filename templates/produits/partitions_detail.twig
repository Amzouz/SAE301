{% extends "base.twig" %}

{% block main %}

    <section class="bg-light py-3">
        <div class="container">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="index.php?page=accueil">Accueil</a></li>
                    <li class="breadcrumb-item"><a href="index.php?page=partitions">Partitions</a></li>
                    <li class="breadcrumb-item active" aria-current="page">{{ partitions.titre_partitions }}</li>
                </ol>
            </nav>
        </div>
    </section>

    {% if erreur_droit_partition %}
    <p class="text-danger fs-4 text-center pt-2">{{ erreur_droit_partition }}</p>
    {% endif %}

    <section class="container my-5">
        <div class="row">
            <div class="col-8">
                <div class="p-4">
                    <h1 class="font_gluten fs-1 text-primary mb-4">{{ partitions.titre_partitions }}</h1>
                    <div class="mb-4">
                        <span class="badge bg-primary px-3 py-2">{{ partitions.instru_partitions }}</span>
                        <span class="badge bg-secondary px-3 py-2 ms-2">{{ partitions.niveau_partitions }}</span>
                    </div>
                    <div class="mb-4">
                        <h3 class="fw-bold text-secondary fs-5 mb-3">Description</h3>
                        <p>{{ partitions.desc_partitions }}</p>
                    </div>
                    <div class="border-top border-success pt-3 mt-4">
                        <p class="text-muted mb-1"><i class="bi bi-calendar"></i> Annonce publiée le {{ partitions.date_post_partitions }}</p>
                    </div>
                </div>
            </div>
            <div class="col-4">
                <div class="card border-1 border-success shadow">
                    <div class="card-body p-4">
                        <div class="text-center mb-4">
                            <p class="fs-1 fw-bold text-primary mb-2">{{ partitions.prix_partitions }} €</p>
                            <p class="small">PDF envoyé par mail suite à l'achat</p>
                        </div>
                        <div class="text-center gap-2">
                            <a href="index.php?page=partitions&action=check_compte" class="btn btn-primary btn-lg">Acheter cette partition</a>
                        </div>
                    </div>
                </div>

                {% if session.id_user == partitions.id_user or session.role == 'administrateur' %}
                <div class="mt-3">
                    <div class="card-body p-3">
                        <div class="d-grid gap-2">
                            <a href="index.php?page=partitions&action=edit&id={{partitions.id_partitions}}" class="btn btn-outline-secondary btn-sm"><i class="bi bi-pencil-fill"></i> Modifier</a>
                            <a href="index.php?page=partitions&action=delete&id={{partitions.id_partitions}}" class="btn btn-outline-danger btn-sm"><i class="bi bi-trash"></i> Supprimer</a>
                        </div>
                    </div>
                </div>
                {% endif %}
            </div>
        </div>
    </section>

{% endblock %}
