{% extends "base.twig" %}

{% block main %}

    <section class="bg-light py-3">
        <div class="container">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb mb-0">
                    <li class="breadcrumb-item"><a href="index.php?page=accueil">Accueil</a></li>
                    <li class="breadcrumb-item"><a href="index.php?page=instruments">Instruments</a></li>
                    <li class="breadcrumb-item active" aria-current="page">{{ instruments.nom_instru }}</li>
                </ol>
            </nav>
        </div>
    </section>

    {% if erreur_droit_instru %}
    <p class="text-danger fs-4 text-center pt-2">{{ erreur_droit_instru }}</p>
    {% endif %}

    <section class="container my-5">
        <div class="row">
            <div class="col-8">
                <div class="p-4">
                    <h1 class="font_gluten fs-1 text-primary mb-4">{{ instruments.nom_instru }}</h1>
                    <div class="mb-4">
                        <span class="badge bg-secondary px-3 py-2 ms-2">{{ instruments.type_instru }}</span>
                    </div>
                    <div class="mb-4">
                        <h3 class="fw-bold text-secondary fs-5 mb-3">Description</h3>
                        <p>{{ instruments.desc_instru }}</p>
                    </div>
                    <div class="mb-4">
                        <h3 class="fw-bold text-secondary fs-5 mb-3">Informations</h3>
                        <p>Référence : {{ instruments.reference_instru }}</p>
                        <p>Etat : {{ instruments.etat_instru }}</p>
                    </div>
                    <div class="border-top border-success pt-3 mt-4">
                        <p class="text-muted mb-1"><i class="bi bi-calendar"></i> Annonce publiée le {{ instruments.date_post_instru }}</p>
                    </div>
                </div>
            </div>
            <div class="col-4">
                <div class="card border-1 border-success shadow">
                    <div class="card-body p-4">
                        <div class="text-center mb-4">
                            <p class="fs-1 fw-bold text-primary mb-2">{{ instruments.prix_instru }} €</p>
                            <p class="small">Paiement possible en plusieurs fois</p>
                        </div>
                        <div class="text-center gap-2">
                            <a href="index.php?page=instruments&action=check_compte" class="btn btn-primary btn-lg">Acheter cet instrument</a>
                        </div>
                    </div>
                </div>

                {% if session.id_user == instruments.id_user or session.role == 'administrateur' %}
                <div class="mt-3">
                    <div class="card-body p-3">
                        <div class="d-grid gap-2">
                            <a href="index.php?page=instruments&action=edit&id={{instruments.id_instru}}" class="btn btn-outline-secondary btn-sm"><i class="bi bi-pencil-fill"></i> Modifier</a>
                            <a href="index.php?page=instruments&action=delete&id={{instruments.id_instru}}" class="btn btn-outline-danger btn-sm"><i class="bi bi-trash"></i> Supprimer</a>
                        </div>
                    </div>
                </div>
                {% endif %}
            </div>
        </div>
    </section>

{% endblock %}
