{% extends "base.twig" %}
{# PAGE AVEC TOUTES LES PARTITIONS #}

{% block main %}

    <section class="container d-flex justify-content-end pt-4">
    {% if session.role == 'musicien' or session.role == 'administrateur' %}
    {# seuls les musiciens ou l'admin peuvent vendre une partition #}
        <a href="index.php?page=partitions&action=nouveau" class="p-2 border bg-secondary text-bg-secondary rounded-3 text-decoration-none">Créer une annonce de partition</a>
    {% endif %}
    </section>

    <section class="container mx-auto py-5">
    <h1 class="font_gluten text-center mb-5">Les partitions en vente</h1>

    <div class="row row-cols-1 row-cols-lg-4 g-4">
        {% for partition in partitions %}
            <div class="col">
                <div class="card border border-dark shadow h-100">
                    <div class="bg-secondary p-4"></div>
                    <div class="card-body d-flex flex-column">
                        <h2 class="card-title fs-5 fw-bold text-primary mb-3">{{ partition.titre_partitions }}</h2>
                        <p class="card-text text-muted small flex-grow-1">{{ partition.instru_partitions }} - {{ partition.niveau_partitions }}</p>
                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <span class="fs-4 fw-bold text-primary">{{ partition.prix_partitions }} €</span>
                            <a href="index.php?page=partitions&action=read&id={{ partition.id_partitions }}" class="btn btn-outline-primary btn-sm">En savoir plus</a>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    </section>

{% endblock %}
