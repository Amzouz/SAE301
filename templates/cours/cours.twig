{% extends "base.twig" %}
{# PAGE AVEC TOUS LES COURS #}

{% block main %}

    <section class="container d-flex justify-content-end pt-4">
    {% if session.role == 'musicien' or session.role == 'administrateur' %}
        {# Seuls les musiciens ou l'admin peuvent créer des cours #}
        <a href="index.php?page=cours&action=nouveau" class="p-2 border bg-secondary text-bg-secondary rounded-3 text-decoration-none">Créer un cours</a>
    {% endif %}
    </section>

    <section class="container mx-auto py-5">
    <h1 class="font_gluten text-center mb-5">Nos cours de musique</h1>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">
        {% for cours in cours %}
            <div class="col">
                <div class="card border border-dark shadow h-100">
                    <div class="bg-secondary p-4"></div>
                    <div class="card-body d-flex flex-column">
                        <h2 class="card-title fs-5 fw-bold text-primary mb-3">{{ cours.titre_cours }}</h2>
                        <p class="card-text text-muted small flex-grow-1">{{ cours.type_cours }}</p>
                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <span class="fs-4 fw-bold text-primary">{{ cours.prix_cours }} €</span>
                            <a href="index.php?page=cours&action=read&id={{ cours.id_cours }}" class="btn btn-outline-primary btn-sm">En savoir plus</a>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    </section>


{% endblock %}
